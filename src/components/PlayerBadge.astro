<style>
	.playerBadge {
		background-repeat: no-repeat;
		height: 96px;
		margin: auto;
		font-family: "Neue Haas Grotesk Text Pro", "Helvetica", "Arial", sans-serif;
		user-select: none;
		-webkit-user-select: none;
		aspect-ratio: 474/96;
		min-width: 0;
	}
	.playerBadgeContent {
		height: 100%;
		display: flex;
		flex-direction: column;
		padding: 6px 3px 6px 87px;
	}
	.playerBadgeUsername {
		min-width: 0;
		max-width: fit-content;
		user-select: all;
		-webkit-user-select: none;
		padding: 0 10px;
		margin: 0 -10px;
	}

	.playerBadgeUsernameFull {
		font-size: 20pt;
		display: flex;
		user-select: text;
		-webkit-user-select: text;
	}
	.playerBadgeName {
		color: white;
		overflow: clip;
		text-overflow: ellipsis;
		flex-shrink: 1;
		min-width: 0;
	}
</style>
